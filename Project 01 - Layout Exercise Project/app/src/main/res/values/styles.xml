<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="button">
        <item name="android:backgroundTint">@color/buttonColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">-0.0009</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/aftika</item>
        <item name="android:paddingTop">@dimen/button_paddingTop</item>
        <item name="android:paddingBottom">@dimen/button_paddingBottom</item>
        <item name="android:textSize">@dimen/button_textSize</item>
        <item name="android:background">@drawable/round_text_card</item>
    </style>

    <style name="subLightTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/aftika</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/subTitleColor</item>
    </style>

    <style name="mainTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/aftika</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/bigTitleColor</item>
        <item name="android:textSize">@dimen/mainTitle_textSize</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">331dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/round_text_card</item>
        <item name="android:textColorHint">@color/buttonColor</item>
        <item name="android:fontFamily">@font/aftika</item>
    </style>

    <style name="colorful_sub_Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_color_text</item>
        <item name="android:paddingLeft">@dimen/clrflTxt_PaddingLeft</item>
        <item name="android:paddingTop">@dimen/clrflTxt_PaddingTop</item>
        <item name="android:paddingRight">@dimen/clrflTxt_PaddingRight</item>
        <item name="android:paddingBottom">@dimen/clrflTxt_PaddingBottom</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="card">
        <item name="android:layout_width">@dimen/card_width</item>
        <item name="android:layout_height">@dimen/card_height</item>
        <item name="android:backgroundTint">#F2F2F3</item>
        <item name="android:layout_marginTop">@dimen/card_MarginTop</item>
    </style>

    <style name="subMainBoldTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/mainSubTitle_mLeft</item>
        <item name="android:layout_marginTop">@dimen/mainSubTitle_mTop</item>
        <item name="android:fontFamily">@font/aftika</item>
        <item name="android:textColor">@color/buttonColor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="subBoldTitle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/mainSubTitle_mLeft</item>
        <item name="android:layout_marginTop">@dimen/premiumSub_mTop1</item>
        <item name="android:textColor">@color/bold_SubTitle</item>
    </style>

    <style name="subBoldTitle2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/mainSubTitle_mLeft</item>
        <item name="android:layout_marginTop">98dp</item>
        <item name="android:textColor">@color/bold_SubTitle</item>
    </style>

    <style name="subLightTitle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/premiumSub_mTop1</item>
        <item name="android:textColor">@color/subTitleColor</item>
    </style>

    <style name="subLightTitle2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/premiumSub_mTop2</item>
        <item name="android:textColor">@color/subTitleColor</item>
    </style>
</resources>